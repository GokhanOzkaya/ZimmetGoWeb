    <style>
        /* Sayfa genel ayarları */
        body {
            margin: 0;
            padding: 0;
            background-image: url('/Images/backgrounds/b.jpg'); /* Arka plan resmi 'b.jpg' olarak ayarlandı */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh; /* Sayfa yüksekliği %100 olacak */
            overflow: hidden; /* Ekranın dışına taşan öğeleri gizle */
        }

        /* Menü sabit yapılacak ve sola yaslanacak */
        .menu {
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
            width: 250px;
            background-color: #333; /* Antrasit menü */
            color: white;
            padding-top: 20px;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.5);
            overflow-y: auto; /* Yüksekliği artırarak menü öğeleri arttıkça kaymasını sağla */
            z-index: 1000; /* Menü öğeleri her zaman ön planda olacak */
        }

        /* Menü öğeleri */
        .menu a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
            font-size: 16px;
        }

        .menu a:hover {
            background-color: rgba(0, 0, 255, 0.2);
        }

        /* İçerik kutusu sağda yer alacak ve kayabilir */
        .content-box {
            margin-left: 250px; /* Menü kadar boşluk bırak */
            width: calc(100% - 250px); /* Menü dışındaki alanda içerik */
            height: 100%; /* Yüksekliği tam ekran yapıyoruz */
            background-color: rgba(255, 255, 255, 0.5); /* Hafif saydam beyaz arka plan */
            backdrop-filter: blur(10px); /* Arka planı bulanıklaştırıyoruz */
            padding: 40px;
            box-sizing: border-box;
            overflow-y: auto; /* İçerik fazla olduğunda kaydırma ekle */
        }

        /* Sağdaki içerik alanı */
        .main-content {
            padding: 40px;
            box-sizing: border-box;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2em;
            color: #333;
        }

        .content {
            text-align: center;
            font-size: 1.2em;
            color: #555;
        }

        /* Menü altındaki alt menü */
        .submenu {
            max-height: 0; /* Başlangıçta gizli */
            overflow: hidden;
            padding-left: 20px;
            background-color: rgba(0, 0, 255, 0.1);
            transition: max-height 0.3s ease-out; /* Animasyon ekleyerek açılış ve kapanış için */
        }

        .menu-item.active .submenu {
            max-height: 500px; /* Alt menüye yeterli alan bırak */
        }

        /* Menü profil kısmı */
        .profile {
            padding: 20px;
            background-color: #222;
            text-align: center;
            margin-bottom: 20px;
            border-radius: 10px;
            margin-left: 10px;
            margin-right: 10px;
        }

        .profile img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
        }

        .profile p {
            color: white;
            margin-top: 10px;
            font-size: 17px;
        }

    </style>
</head>
