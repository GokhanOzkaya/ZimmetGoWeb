@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .dashboard-card {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border: 2px solid #dee2e6;
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .dashboard-card-header {
        background: linear-gradient(45deg, #800020, #4B0082);
        color: white;
        font-weight: 500;
        padding: 15px 20px;
    }

    .dashboard-card-body {
        padding: 20px;
    }

    .welcome-title {
        color: #800020;
        font-weight: 600;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 10px;
    }

    .welcome-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background: linear-gradient(45deg, #800020, #4B0082);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 600;
        color: #800020;
        margin-bottom: 10px;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .stat-icon {
        font-size: 2.5rem;
        color: #800020;
        margin-bottom: 15px;
    }
</style>

<div class="container mt-5">
    <h2 class="welcome-title">Hoş Geldiniz</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="dashboard-card-body">
                    <i class="bi bi-people stat-icon"></i>
                    <div class="stat-number">150</div>
                    <div class="stat-label">Aktif Kullanıcı</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="dashboard-card-body">
                    <i class="bi bi-box-seam stat-icon"></i>
                    <div class="stat-number">450</div>
                    <div class="stat-label">Toplam Demirbaş</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="dashboard-card-body">
                    <i class="bi bi-clipboard-check stat-icon"></i>
                    <div class="stat-number">320</div>
                    <div class="stat-label">Aktif Zimmet</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card text-center">
                <div class="dashboard-card-body">
                    <i class="bi bi-tools stat-icon"></i>
                    <div class="stat-number">15</div>
                    <div class="stat-label">Bakımdaki Demirbaş</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <i class="bi bi-clock-history me-2"></i>Son Zimmet İşlemleri
                </div>
                <div class="dashboard-card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Demirbaş</th>
                                    <th>Kullanıcı</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Laptop Dell XPS 15</td>
                                    <td>Ahmet Yılmaz</td>
                                    <td>12.04.2024</td>
                                    <td><span class="badge bg-success">Aktif</span></td>
                                </tr>
                                <tr>
                                    <td>iPhone 13 Pro</td>
                                    <td>Mehmet Demir</td>
                                    <td>11.04.2024</td>
                                    <td><span class="badge bg-success">Aktif</span></td>
                                </tr>
                                <tr>
                                    <td>HP LaserJet Pro</td>
                                    <td>Ayşe Kaya</td>
                                    <td>10.04.2024</td>
                                    <td><span class="badge bg-warning">İade Edildi</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <i class="bi bi-bell me-2"></i>Son Bildirimler
                </div>
                <div class="dashboard-card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Yeni Zimmet Talebi</h6>
                                <small>3 dakika önce</small>
                            </div>
                            <p class="mb-1">Ali Yılmaz tarafından yeni bir laptop talebi oluşturuldu.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Zimmet İade</h6>
                                <small>1 saat önce</small>
                            </div>
                            <p class="mb-1">Ayşe Kaya tarafından yazıcı iadesi gerçekleştirildi.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Bakım Hatırlatması</h6>
                                <small>2 saat önce</small>
                            </div>
                            <p class="mb-1">5 adet demirbaşın bakım tarihi yaklaşıyor.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
