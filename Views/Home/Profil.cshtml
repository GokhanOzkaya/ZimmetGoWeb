@{
    ViewData["Title"] = "Profil";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border: 2px solid #dee2e6;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background: linear-gradient(45deg, #800020, #4B0082);
            color: white;
            padding: 15px;
            border: none;
        }

        .card-body {
            padding: 20px;
        }

        .page-title {
            color: #800020;
            font-weight: 600;
            margin: 0;
            position: relative;
            padding-bottom: 10px;
        }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(45deg, #800020, #4B0082);
        }

        .header-container {
            margin-bottom: 30px;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #800020;
            padding: 3px;
        }

        .profile-stats {
            background: linear-gradient(45deg, #800020, #4B0082);
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
        }

        .stat-item {
            text-align: center;
            padding: 10px;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .btn-edit {
            background: linear-gradient(45deg, #800020, #4B0082);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(128, 0, 32, 0.3);
            color: white;
        }

        .profile-info {
            margin-top: 20px;
        }

        .info-item {
            margin-bottom: 15px;
        }

        .info-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .info-value {
            color: #6c757d;
        }

        .activity-item {
            padding: 10px;
            border-left: 3px solid #800020;
            margin-bottom: 15px;
            background-color: #fff;
            border-radius: 0 8px 8px 0;
        }

        .activity-date {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .activity-title {
            font-weight: 600;
            color: #2c3e50;
            margin: 5px 0;
        }

        .activity-description {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header-container">
            <h2 class="page-title">@ViewData["Title"]</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/150" alt="Profil Fotoğrafı" class="profile-image">
                        <h4 class="mt-3">Ahmet Yılmaz</h4>
                        <p class="text-muted">Sistem Yöneticisi</p>
                        
                        <div class="profile-stats">
                            <div class="row">
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="stat-value">12</div>
                                        <div class="stat-label">Zimmet</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="stat-value">5</div>
                                        <div class="stat-label">Rapor</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="stat-value">3</div>
                                        <div class="stat-label">İşlem</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-edit mt-3">
                            <i class="bi bi-pencil me-2"></i>Profili Düzenle
                        </button>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-person-lines-fill me-2"></i>
                        Kişisel Bilgiler
                    </div>
                    <div class="card-body">
                        <div class="profile-info">
                            <div class="info-item">
                                <div class="info-label">E-posta</div>
                                <div class="info-value">ahmet.yilmaz@zimmetgo.com</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Telefon</div>
                                <div class="info-value">+90 555 123 4567</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Departman</div>
                                <div class="info-value">Bilgi Teknolojileri</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Pozisyon</div>
                                <div class="info-value">Sistem Yöneticisi</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-clock-history me-2"></i>
                        Son Aktiviteler
                    </div>
                    <div class="card-body">
                        <div class="activity-item">
                            <div class="activity-date">23 Mart 2024, 14:30</div>
                            <div class="activity-title">Yeni Zimmet Oluşturuldu</div>
                            <div class="activity-description">HP Laptop zimmeti oluşturuldu.</div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-date">22 Mart 2024, 11:15</div>
                            <div class="activity-title">Rapor İndirildi</div>
                            <div class="activity-description">Aylık zimmet raporu indirildi.</div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-date">21 Mart 2024, 16:45</div>
                            <div class="activity-title">Zimmet İade Edildi</div>
                            <div class="activity-description">Samsung Monitor zimmeti iade edildi.</div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-date">20 Mart 2024, 09:30</div>
                            <div class="activity-title">Profil Güncellendi</div>
                            <div class="activity-description">Profil bilgileri güncellendi.</div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-shield-check me-2"></i>
                        Güvenlik
                    </div>
                    <div class="card-body">
                        <div class="profile-info">
                            <div class="info-item">
                                <div class="info-label">Son Giriş</div>
                                <div class="info-value">23 Mart 2024, 08:15</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Son Şifre Değişikliği</div>
                                <div class="info-value">15 Mart 2024</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">İki Faktörlü Doğrulama</div>
                                <div class="info-value">Aktif</div>
                            </div>
                        </div>
                        <button class="btn btn-edit">
                            <i class="bi bi-shield-lock me-2"></i>Güvenlik Ayarlarını Güncelle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 